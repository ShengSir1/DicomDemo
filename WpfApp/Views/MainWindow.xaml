<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Icon="/wwwroot/16c0f2e1fe54b8_16x16.ico"
        Title="DICOM查看器" Height="450" Width="800">

    <Window.Resources>
        <!-- 用于将布尔值转换为 Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <!-- 主容器改为 Grid，以便叠放蒙层 -->
    <Grid>
        <!-- 主内容：原来的 ScrollViewer -->
        <ScrollViewer hc:ScrollViewerAttach.IsHoverResizingEnabled="False" hc:ScrollViewerAttach.AutoHide="False">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Top: 文件选择器 -->
                <Border Grid.Row="0" Padding="10" CornerRadius="6" Background="#FFF" BorderBrush="#FFE6E6E6" BorderThickness="1">
                    <DockPanel>
                        <Button Content="选择 DCM 文件" Command="{Binding BrowseCommand}" Style="{StaticResource ButtonDashed}" Width="120" Height="32" Margin="0,0,12,0" HorizontalAlignment="Left" />
                        <TextBlock Text="已选文件：" VerticalAlignment="Center" Foreground="#444" />
                        <TextBox Text="{Binding SelectedFileName}" IsReadOnly="True" VerticalAlignment="Center" Margin="8,0,0,0"  Width="380"/>
                        <Button Content="加载图像" Command="{Binding ClearCommand}" Style="{StaticResource ButtonDashedPrimary}" Width="70" Height="32" Margin="12,0,12,0" HorizontalAlignment="Left" />
                        <Button Content="清空" Command="{Binding ClearCommand}" Width="70" Height="32" Margin="12,0,12,0" HorizontalAlignment="Left" />
                    </DockPanel>
                </Border>

                <!-- 间隔 -->
                <Separator Grid.Row="1" />

                <!-- 文件基础信息 -->
                <Border Grid.Row="2" Padding="10" CornerRadius="6" Background="#FFF" BorderBrush="#FFE6E6E6" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="文件基础信息" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                        <DataGrid Grid.Row="1" ItemsSource="{Binding FileBasic}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="属性" Binding="{Binding Key}" Width="200" />
                                <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- 间隔 -->
                <Separator Grid.Row="3" />

                <!-- Bottom: display DICOM data -->
                <Border Grid.Row="4" Padding="10" CornerRadius="6" Background="#FFF" BorderBrush="#FFE6E6E6" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="DICOM 文件信息" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                        <!-- 工具栏: add/remove tag -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="添加标签" Command="{Binding AddTagCommand}" Style="{StaticResource ButtonPrimary}" Width="80" Height="28" Margin="0,0,8,0" />
                            <Button Content="删除标签" Command="{Binding RemoveTagCommand}" CommandParameter="{Binding SelectedItem, ElementName=DicomGrid}" Style="{StaticResource ButtonDanger}" Width="80" Height="28" />
                        </StackPanel>

                        <DataGrid x:Name="DicomGrid" Grid.Row="2" ItemsSource="{Binding DicomTags}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False" IsSynchronizedWithCurrentItem="False" EnableRowVirtualization="False" EnableColumnVirtualization="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="120" IsReadOnly="True" />
                                <DataGridTextColumn Header="标签" Binding="{Binding Label}" Width="200" IsReadOnly="True" />
                                <DataGridTextColumn Header="值" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Busy overlay: 覆盖整个窗口并阻止用户交互 -->
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" Background="Transparent"  Panel.ZIndex="999" Focusable="True" IsHitTestVisible="{Binding IsBusy}">
            <!-- 加载控件 -->
            <hc:LoadingCircle IsRunning="{Binding IsBusy}"/>
        </Grid>
    </Grid>
</Window>
